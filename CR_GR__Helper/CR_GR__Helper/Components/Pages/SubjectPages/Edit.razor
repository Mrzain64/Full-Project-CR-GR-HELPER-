@page "/subjects/edit"
@using Microsoft.EntityFrameworkCore
@using CR_GR__Helper.Models
@inject IDbContextFactory<CR_GR__Helper.Data.CR_GR__HelperContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Edit</PageTitle>

<h1>Edit</h1>

<h2>Subject</h2>
<hr />
@if (Subject is null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="row">
        <div class="col-md-4">
            <EditForm method="post" Model="Subject" OnValidSubmit="UpdateSubject" FormName="edit" Enhance>
                <DataAnnotationsValidator />
                <ValidationSummary role="alert"/>
                <input type="hidden" name="Subject.Id" value="@Subject.Id" />
                <div class="mb-3">
                <span class="text-danger">*</span>
                    <label for="subjectname" class="form-label">SubjectName:</label>
                    <InputText id="subjectname" @bind-Value="Subject.SubjectName" class="form-control" aria-required="true"/>
                    <ValidationMessage For="() => Subject.SubjectName" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="credithours" class="form-label">CreditHours:</label>
                    <InputNumber id="credithours" @bind-Value="Subject.CreditHours" class="form-control" />
                    <ValidationMessage For="() => Subject.CreditHours" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="teacherid" class="form-label">TeacherId:</label>
                    <InputNumber id="teacherid" @bind-Value="Subject.TeacherId" class="form-control" />
                    <ValidationMessage For="() => Subject.TeacherId" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="isactive" class="form-label">IsActive:</label>
                    <InputCheckbox id="isactive" @bind-Value="Subject.IsActive" class="form-check-input" />
                    <ValidationMessage For="() => Subject.IsActive" class="text-danger" />
                </div>
                <button type="submit" class="btn btn-primary">Save</button>
            </EditForm>
        </div>
    </div>
}

<div>
    <a href="/subjects">Back to List</a>
</div>

@code {
    [SupplyParameterFromQuery]
    private int Id { get; set; }

    [SupplyParameterFromForm]
    private Subject? Subject { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        Subject ??= await context.Subject.FirstOrDefaultAsync(m => m.Id == Id);

        if (Subject is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    // To protect from overposting attacks, enable the specific properties you want to bind to.
    // For more information, see https://learn.microsoft.com/aspnet/core/blazor/forms/#mitigate-overposting-attacks.
    private async Task UpdateSubject()
    {
        using var context = DbFactory.CreateDbContext();
        context.Attach(Subject!).State = EntityState.Modified;

        try
        {
            await context.SaveChangesAsync();
        }
        catch (DbUpdateConcurrencyException)
        {
            if (!SubjectExists(Subject!.Id))
            {
                NavigationManager.NavigateTo("notfound");
            }
            else
            {
                throw;
            }
        }

        NavigationManager.NavigateTo("/subjects");
    }

    private bool SubjectExists(int id)
    {
        using var context = DbFactory.CreateDbContext();
        return context.Subject.Any(e => e.Id == id);
    }
}
