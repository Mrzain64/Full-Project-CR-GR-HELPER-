@page "/cr_grs"
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Components.QuickGrid
@using CR_GR__Helper.Models
@using CR_GR__Helper.Data
@implements IAsyncDisposable
@inject IDbContextFactory<CR_GR__Helper.Data.CR_GR__HelperContext> DbFactory

<PageTitle>CR/GR</PageTitle>

<style>
    .crgr-container {
        max-width: 1400px;
        margin: 0 auto;
        padding: 40px 20px;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .page-header {
        margin-bottom: 40px;
        animation: fadeInDown 0.6s ease;
    }

    @@keyframes fadeInDown {
        from {
            opacity: 0;
            transform: translateY(-20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .page-header h1 {
        font-size: 2.5rem;
        color: #1e293b;
        margin-bottom: 10px;
        font-weight: 700;
        display: flex;
        align-items: center;
        gap: 15px;
    }

    .page-header p {
        color: #64748b;
        font-size: 1.1rem;
    }

    .header-actions {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
        gap: 20px;
        flex-wrap: wrap;
        animation: fadeInUp 0.6s ease 0.2s backwards;
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .search-box {
        flex: 1;
        max-width: 400px;
        position: relative;
    }

        .search-box input {
            width: 100%;
            padding: 14px 45px 14px 20px;
            border: 2px solid #e2e8f0;
            border-radius: 12px;
            font-size: 1rem;
            transition: all 0.3s ease;
            background: white;
        }

            .search-box input:focus {
                outline: none;
                border-color: #06b6d4;
                box-shadow: 0 0 0 4px rgba(6, 182, 212, 0.1);
            }

    .search-icon {
        position: absolute;
        right: 15px;
        top: 50%;
        transform: translateY(-50%);
        color: #64748b;
    }

    .btn-create {
        padding: 14px 30px;
        background: linear-gradient(135deg, #06b6d4, #0891b2);
        color: white;
        text-decoration: none;
        border-radius: 12px;
        font-weight: 600;
        font-size: 1rem;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(6, 182, 212, 0.3);
        display: inline-flex;
        align-items: center;
        gap: 8px;
        border: none;
        cursor: pointer;
    }

        .btn-create:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 25px rgba(6, 182, 212, 0.4);
        }

    .stats-row {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        margin-bottom: 30px;
        animation: fadeInUp 0.6s ease 0.3s backwards;
    }

    .stat-card {
        background: white;
        padding: 25px;
        border-radius: 16px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.06);
        border-left: 4px solid #06b6d4;
        transition: all 0.3s ease;
    }

        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
        }

    .stat-value {
        font-size: 2rem;
        font-weight: 700;
        color: #1e293b;
        margin-bottom: 5px;
    }

    .stat-label {
        color: #64748b;
        font-size: 0.9rem;
    }

    .crgr-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(380px, 1fr));
        gap: 25px;
        animation: fadeInUp 0.6s ease 0.4s backwards;
    }

    .crgr-card {
        background: white;
        border-radius: 20px;
        padding: 30px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

        .crgr-card::before {
            content: '';
            position: absolute;
            top: 0;
            right: 0;
            width: 150px;
            height: 150px;
            background: linear-gradient(135deg, #cffafe 0%, transparent 70%);
            border-radius: 0 0 0 100%;
        }

        .crgr-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 12px 40px rgba(6, 182, 212, 0.15);
        }

    .role-badge {
        position: absolute;
        top: 20px;
        right: 20px;
        padding: 8px 16px;
        border-radius: 20px;
        font-size: 0.85rem;
        font-weight: 700;
        background: linear-gradient(135deg, #06b6d4, #0891b2);
        color: white;
        z-index: 1;
        box-shadow: 0 4px 10px rgba(6, 182, 212, 0.3);
    }

    .profile-section {
        display: flex;
        align-items: center;
        gap: 20px;
        margin-bottom: 20px;
        position: relative;
        z-index: 1;
    }

    .profile-avatar {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        background: linear-gradient(135deg, #cffafe, #a5f3fc);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2rem;
        border: 4px solid white;
        box-shadow: 0 4px 15px rgba(6, 182, 212, 0.2);
    }

    .profile-info {
        flex: 1;
    }

    .profile-name {
        font-size: 1.4rem;
        font-weight: 700;
        color: #1e293b;
        margin-bottom: 5px;
    }

    .profile-reg {
        font-size: 0.95rem;
        color: #06b6d4;
        font-weight: 600;
    }

    .contact-details {
        display: flex;
        flex-direction: column;
        gap: 12px;
        margin-bottom: 20px;
        position: relative;
        z-index: 1;
    }

    .contact-item {
        display: flex;
        align-items: center;
        gap: 12px;
        padding: 12px;
        background: #f8fafc;
        border-radius: 10px;
        transition: all 0.3s ease;
    }

        .contact-item:hover {
            background: #e0f2fe;
        }

    .contact-icon {
        font-size: 1.2rem;
        width: 32px;
        height: 32px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: white;
        border-radius: 8px;
        color: #06b6d4;
    }

    .contact-text {
        flex: 1;
        font-size: 0.95rem;
        color: #334155;
    }

    .action-buttons {
        display: flex;
        gap: 10px;
        position: relative;
        z-index: 1;
    }

    .btn-action {
        flex: 1;
        padding: 10px;
        text-decoration: none;
        border-radius: 8px;
        font-size: 0.9rem;
        font-weight: 500;
        transition: all 0.3s ease;
        text-align: center;
    }

    .btn-edit {
        background: #dbeafe;
        color: #1e40af;
    }

        .btn-edit:hover {
            background: #3b82f6;
            color: white;
        }

    .btn-details {
        background: #e0f2fe;
        color: #0369a1;
    }

        .btn-details:hover {
            background: #06b6d4;
            color: white;
        }

    .btn-delete {
        background: #fee2e2;
        color: #991b1b;
    }

        .btn-delete:hover {
            background: #dc2626;
            color: white;
        }

    .empty-state {
        text-align: center;
        padding: 80px 20px;
        color: #64748b;
        background: white;
        border-radius: 16px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    }

    .empty-state-icon {
        font-size: 4rem;
        margin-bottom: 20px;
        opacity: 0.5;
    }

    @@media (max-width: 768px) {
        .page-header h1 {
            font-size: 1.8rem;
        }

        .header-actions {
            flex-direction: column;
            align-items: stretch;
        }

        .search-box {
            max-width: 100%;
        }

        .crgr-grid {
            grid-template-columns: 1fr;
        }
    }
</style>

<div class="crgr-container">
    <div class="page-header">
        <h1>
            <span>👥</span>
            CR & GR Information
        </h1>
        <p>Class Representatives & Girls Representatives Management</p>
    </div>

    <div class="stats-row">
        <div class="stat-card">
            <div class="stat-value">@context.CR_GR.Count()</div>
            <div class="stat-label">Total Representatives</div>
        </div>
    </div>

    <div class="header-actions">
        <div class="search-box">
            <input type="text" placeholder="Search representatives..."
                   @bind="searchTerm" @bind:event="oninput" />
            <span class="search-icon">🔍</span>
        </div>
        <a href="cr_grs/create" class="btn-create">
            <span>➕</span>
            Add Representative
        </a>
    </div>

    <div class="crgr-grid">
        @if (FilteredCRGRs.Any())
        {
            @foreach (var crgr in FilteredCRGRs)
            {
                <div class="crgr-card">
                    <div class="role-badge">Representative</div>

                    <div class="profile-section">
                        <div class="profile-avatar">👤</div>
                        <div class="profile-info">
                            <div class="profile-name">@crgr.Name</div>
                            <div class="profile-reg">@crgr.Registration_No</div>
                        </div>
                    </div>

                    <div class="contact-details">
                        <div class="contact-item">
                            <div class="contact-icon">📧</div>
                            <div class="contact-text">@crgr.Email</div>
                        </div>
                        <div class="contact-item">
                            <div class="contact-icon">📱</div>
                            <div class="contact-text">@crgr.Contact_number</div>
                        </div>
                    </div>

                    <div class="action-buttons">
                        <a href="@($"cr_grs/edit?id={crgr.Id}")" class="btn-action btn-edit">Edit</a>
                        <a href="@($"cr_grs/details?id={crgr.Id}")" class="btn-action btn-details">Details</a>
                        <a href="@($"cr_grs/delete?id={crgr.Id}")" class="btn-action btn-delete">Delete</a>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="empty-state">
                <div class="empty-state-icon">📭</div>
                <h3>No representatives found</h3>
                <p>Try adjusting your search or add a new representative</p>
            </div>
        }
    </div>
</div>

@code {
    private CR_GR__HelperContext context = default!;
    private string searchTerm = "";

    private IEnumerable<CR_GR> FilteredCRGRs
    {
        get
        {
            var crgrs = context.CR_GR.ToList();

            if (string.IsNullOrWhiteSpace(searchTerm))
                return crgrs;

            var search = searchTerm.ToLower();
            return crgrs.Where(c =>
                c.Name.ToLower().Contains(search) ||
                c.Registration_No.ToLower().Contains(search) ||
                c.Email.ToLower().Contains(search)
            );
        }
    }

    protected override void OnInitialized()
    {
        context = DbFactory.CreateDbContext();
    }

    public async ValueTask DisposeAsync() => await context.DisposeAsync();
}