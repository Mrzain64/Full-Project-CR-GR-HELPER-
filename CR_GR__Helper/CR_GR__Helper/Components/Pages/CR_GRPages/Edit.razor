@page "/cr_grs/edit"
@using Microsoft.EntityFrameworkCore
@using CR_GR__Helper.Models
@inject IDbContextFactory<CR_GR__Helper.Data.CR_GR__HelperContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Edit</PageTitle>

<h1>Edit</h1>

<h2>CR_GR</h2>
<hr />
@if (CR_GR is null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="row">
        <div class="col-md-4">
            <EditForm method="post" Model="CR_GR" OnValidSubmit="UpdateCR_GR" FormName="edit" Enhance>
                <DataAnnotationsValidator />
                <ValidationSummary role="alert"/>
                <input type="hidden" name="CR_GR.Id" value="@CR_GR.Id" />
                <div class="mb-3">
                <span class="text-danger">*</span>
                    <label for="name" class="form-label">Name:</label>
                    <InputText id="name" @bind-Value="CR_GR.Name" class="form-control" aria-required="true"/>
                    <ValidationMessage For="() => CR_GR.Name" class="text-danger" />
                </div>
                <div class="mb-3">
                <span class="text-danger">*</span>
                    <label for="registration_no" class="form-label">Registration_No:</label>
                    <InputText id="registration_no" @bind-Value="CR_GR.Registration_No" class="form-control" aria-required="true"/>
                    <ValidationMessage For="() => CR_GR.Registration_No" class="text-danger" />
                </div>
                <div class="mb-3">
                <span class="text-danger">*</span>
                    <label for="email" class="form-label">Email:</label>
                    <InputText id="email" @bind-Value="CR_GR.Email" class="form-control" aria-required="true"/>
                    <ValidationMessage For="() => CR_GR.Email" class="text-danger" />
                </div>
                <div class="mb-3">
                <span class="text-danger">*</span>
                    <label for="contact_number" class="form-label">Contact_number:</label>
                    <InputText id="contact_number" @bind-Value="CR_GR.Contact_number" class="form-control" aria-required="true"/>
                    <ValidationMessage For="() => CR_GR.Contact_number" class="text-danger" />
                </div>
                <button type="submit" class="btn btn-primary">Save</button>
            </EditForm>
        </div>
    </div>
}

<div>
    <a href="/cr_grs">Back to List</a>
</div>

@code {
    [SupplyParameterFromQuery]
    private int Id { get; set; }

    [SupplyParameterFromForm]
    private CR_GR? CR_GR { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        CR_GR ??= await context.CR_GR.FirstOrDefaultAsync(m => m.Id == Id);

        if (CR_GR is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    // To protect from overposting attacks, enable the specific properties you want to bind to.
    // For more information, see https://learn.microsoft.com/aspnet/core/blazor/forms/#mitigate-overposting-attacks.
    private async Task UpdateCR_GR()
    {
        using var context = DbFactory.CreateDbContext();
        context.Attach(CR_GR!).State = EntityState.Modified;

        try
        {
            await context.SaveChangesAsync();
        }
        catch (DbUpdateConcurrencyException)
        {
            if (!CR_GRExists(CR_GR!.Id))
            {
                NavigationManager.NavigateTo("notfound");
            }
            else
            {
                throw;
            }
        }

        NavigationManager.NavigateTo("/cr_grs");
    }

    private bool CR_GRExists(int id)
    {
        using var context = DbFactory.CreateDbContext();
        return context.CR_GR.Any(e => e.Id == id);
    }
}
