@page "/alerts"
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Components.QuickGrid
@using CR_GR__Helper.Models
@using CR_GR__Helper.Data
@implements IAsyncDisposable
@inject IDbContextFactory<CR_GR__Helper.Data.CR_GR__HelperContext> DbFactory

<PageTitle>Announcements</PageTitle>

<style>
    .alerts-container {
        max-width: 1400px;
        margin: 0 auto;
        padding: 40px 20px;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .page-header {
        margin-bottom: 40px;
        animation: fadeInDown 0.6s ease;
    }

    @@keyframes fadeInDown {
        from {
            opacity: 0;
            transform: translateY(-20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .page-header h1 {
        font-size: 2.5rem;
        color: #1e293b;
        margin-bottom: 10px;
        font-weight: 700;
        display: flex;
        align-items: center;
        gap: 15px;
    }

    .page-header p {
        color: #64748b;
        font-size: 1.1rem;
    }

    .header-actions {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
        gap: 20px;
        flex-wrap: wrap;
        animation: fadeInUp 0.6s ease 0.2s backwards;
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .search-box {
        flex: 1;
        max-width: 400px;
        position: relative;
    }

        .search-box input {
            width: 100%;
            padding: 14px 45px 14px 20px;
            border: 2px solid #e2e8f0;
            border-radius: 12px;
            font-size: 1rem;
            transition: all 0.3s ease;
            background: white;
        }

            .search-box input:focus {
                outline: none;
                border-color: #f59e0b;
                box-shadow: 0 0 0 4px rgba(245, 158, 11, 0.1);
            }

    .search-icon {
        position: absolute;
        right: 15px;
        top: 50%;
        transform: translateY(-50%);
        color: #64748b;
        font-size: 1.2rem;
    }

    .btn-create {
        padding: 14px 30px;
        background: linear-gradient(135deg, #f59e0b, #d97706);
        color: white;
        text-decoration: none;
        border-radius: 12px;
        font-weight: 600;
        font-size: 1rem;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(245, 158, 11, 0.3);
        display: inline-flex;
        align-items: center;
        gap: 8px;
        border: none;
        cursor: pointer;
    }

        .btn-create:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 25px rgba(245, 158, 11, 0.4);
        }

    .stats-row {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
        margin-bottom: 30px;
        animation: fadeInUp 0.6s ease 0.3s backwards;
    }

    .stat-card {
        background: white;
        padding: 25px;
        border-radius: 16px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.06);
        border-left: 4px solid #f59e0b;
        transition: all 0.3s ease;
    }

        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
        }

    .stat-value {
        font-size: 2rem;
        font-weight: 700;
        color: #1e293b;
        margin-bottom: 5px;
    }

    .stat-label {
        color: #64748b;
        font-size: 0.9rem;
    }

    .alerts-grid {
        display: grid;
        gap: 20px;
        animation: fadeInUp 0.6s ease 0.4s backwards;
    }

    .alert-card {
        background: white;
        border-radius: 16px;
        padding: 25px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        transition: all 0.3s ease;
        border-left: 4px solid #f59e0b;
        position: relative;
    }

        .alert-card.urgent {
            border-left-color: #ef4444;
            background: linear-gradient(135deg, #ffffff 0%, #fef2f2 100%);
        }

        .alert-card:hover {
            transform: translateX(5px);
            box-shadow: 0 6px 30px rgba(0, 0, 0, 0.12);
        }

    .alert-header {
        display: flex;
        justify-content: space-between;
        align-items: start;
        margin-bottom: 15px;
        gap: 15px;
    }

    .alert-title {
        font-size: 1.3rem;
        font-weight: 700;
        color: #1e293b;
        margin-bottom: 5px;
    }

    .urgent-badge {
        background: #fee2e2;
        color: #991b1b;
        padding: 6px 14px;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: 600;
        display: inline-flex;
        align-items: center;
        gap: 5px;
        animation: pulse 2s ease-in-out infinite;
    }

    @@keyframes pulse {
        0%, 100% {
            opacity: 1;
        }

        50% {
            opacity: 0.7;
        }
    }

    .alert-description {
        color: #475569;
        line-height: 1.6;
        margin-bottom: 15px;
    }

    .alert-meta {
        display: flex;
        gap: 20px;
        flex-wrap: wrap;
        font-size: 0.9rem;
        color: #64748b;
        margin-bottom: 15px;
    }

    .meta-item {
        display: flex;
        align-items: center;
        gap: 6px;
    }

    .action-buttons {
        display: flex;
        gap: 10px;
        flex-wrap: wrap;
    }

    .btn-action {
        padding: 8px 16px;
        text-decoration: none;
        border-radius: 8px;
        font-size: 0.9rem;
        font-weight: 500;
        transition: all 0.3s ease;
        display: inline-block;
    }

    .btn-edit {
        background: #dbeafe;
        color: #1e40af;
    }

        .btn-edit:hover {
            background: #3b82f6;
            color: white;
        }

    .btn-details {
        background: #fef3c7;
        color: #92400e;
    }

        .btn-details:hover {
            background: #f59e0b;
            color: white;
        }

    .btn-delete {
        background: #fee2e2;
        color: #991b1b;
    }

        .btn-delete:hover {
            background: #dc2626;
            color: white;
        }

    .empty-state {
        text-align: center;
        padding: 80px 20px;
        color: #64748b;
        background: white;
        border-radius: 16px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    }

    .empty-state-icon {
        font-size: 4rem;
        margin-bottom: 20px;
        opacity: 0.5;
    }

    @@media (max-width: 768px) {
        .page-header h1 {
            font-size: 1.8rem;
        }

        .header-actions {
            flex-direction: column;
            align-items: stretch;
        }

        .search-box {
            max-width: 100%;
        }
    }
</style>

<div class="alerts-container">
    <div class="page-header">
        <h1>
            <span>🎙️</span>
            Announcements
        </h1>
        <p>Stay updated with all important announcements and alerts</p>
    </div>

    <div class="stats-row">
        <div class="stat-card">
            <div class="stat-value">@context.Alert.Count()</div>
            <div class="stat-label">Total Announcements</div>
        </div>
        <div class="stat-card" style="border-left-color: #ef4444;">
            <div class="stat-value">@context.Alert.Count(a => a.IsUrgent)</div>
            <div class="stat-label">Urgent Alerts</div>
        </div>
        <div class="stat-card" style="border-left-color: #10b981;">
            <div class="stat-value">@context.Alert.Count(a => a.ExpiryDate >= DateTime.Now)</div>
            <div class="stat-label">Active Alerts</div>
        </div>
    </div>

    <div class="header-actions">
        <div class="search-box">
            <input type="text" placeholder="Search announcements..."
                   @bind="searchTerm" @bind:event="oninput" />
            <span class="search-icon">🔍</span>
        </div>
        <a href="alerts/create" class="btn-create">
            <span>➕</span>
            Create Announcement
        </a>
    </div>

    <div class="alerts-grid">
        @if (FilteredAlerts.Any())
        {
            @foreach (var alert in FilteredAlerts)
            {
                <div class="alert-card @(alert.IsUrgent ? "urgent" : "")">
                    <div class="alert-header">
                        <div>
                            <div class="alert-title">@alert.Title</div>
                            @if (alert.IsUrgent)
                            {
                                <span class="urgent-badge">🔴 Urgent</span>
                            }
                        </div>
                    </div>

                    <div class="alert-description">@alert.Description</div>

                    <div class="alert-meta">
                        <div class="meta-item">
                            <span>👤</span>
                            <span>@alert.Posted_By</span>
                        </div>
                        <div class="meta-item">
                            <span>📅</span>
                            <span>@alert.PostedDate.ToString("MMM dd, yyyy")</span>
                        </div>
                        @if (alert.ExpiryDate.HasValue)
                        {
                            <div class="meta-item">
                                <span>⏰</span>
                                <span>Expires: @alert.ExpiryDate.Value.ToString("MMM dd, yyyy")</span>
                            </div>
                        }
                    </div>

                    <div class="action-buttons">
                        <a href="@($"alerts/edit?id={alert.Id}")" class="btn-action btn-edit">Edit</a>
                        <a href="@($"alerts/details?id={alert.Id}")" class="btn-action btn-details">Details</a>
                        <a href="@($"alerts/delete?id={alert.Id}")" class="btn-action btn-delete">Delete</a>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="empty-state">
                <div class="empty-state-icon">📭</div>
                <h3>No announcements found</h3>
                <p>Try adjusting your search or create a new announcement</p>
            </div>
        }
    </div>
</div>

@code {
    private CR_GR__HelperContext context = default!;
    private string searchTerm = "";

    private IEnumerable<Alert> FilteredAlerts
    {
        get
        {
            var alerts = context.Alert.OrderByDescending(a => a.IsUrgent).ThenByDescending(a => a.PostedDate).ToList();

            if (string.IsNullOrWhiteSpace(searchTerm))
                return alerts;

            var search = searchTerm.ToLower();
            return alerts.Where(a => a.Title.ToLower().Contains(search) ||
                                    a.Description.ToLower().Contains(search) ||
                                    a.Posted_By.ToLower().Contains(search));
        }
    }

    protected override void OnInitialized()
    {
        context = DbFactory.CreateDbContext();
    }

    public async ValueTask DisposeAsync() => await context.DisposeAsync();
}