@page "/alerts/details"
@using Microsoft.EntityFrameworkCore
@using CR_GR__Helper.Models
@inject IDbContextFactory<CR_GR__Helper.Data.CR_GR__HelperContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Details</PageTitle>

<h1>Details</h1>

<div>
    <h2>Alert</h2>
    <hr />
    @if (alert is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Title</dt>
            <dd class="col-sm-10">@alert.Title</dd>
            <dt class="col-sm-2">Description</dt>
            <dd class="col-sm-10">@alert.Description</dd>
            <dt class="col-sm-2">Posted_By</dt>
            <dd class="col-sm-10">@alert.Posted_By</dd>
            <dt class="col-sm-2">PostedDate</dt>
            <dd class="col-sm-10">@alert.PostedDate</dd>
            <dt class="col-sm-2">IsUrgent</dt>
            <dd class="col-sm-10">@alert.IsUrgent</dd>
            <dt class="col-sm-2">ExpiryDate</dt>
            <dd class="col-sm-10">@alert.ExpiryDate</dd>
        </dl>
        <div>
            <a href="@($"/alerts/edit?id={alert.Id}")">Edit</a> |
            <a href="@($"/alerts")">Back to List</a>
        </div>
    }
</div>

@code {
    private Alert? alert;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        alert = await context.Alert.FirstOrDefaultAsync(m => m.Id == Id);

        if (alert is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }
}
