@page "/alerts/delete"
@using Microsoft.EntityFrameworkCore
@using CR_GR__Helper.Models
@inject IDbContextFactory<CR_GR__Helper.Data.CR_GR__HelperContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>Alert</h2>
    <hr />
    @if (alert is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Title</dt>
            <dd class="col-sm-10">@alert.Title</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Description</dt>
            <dd class="col-sm-10">@alert.Description</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Posted_By</dt>
            <dd class="col-sm-10">@alert.Posted_By</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">PostedDate</dt>
            <dd class="col-sm-10">@alert.PostedDate</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">IsUrgent</dt>
            <dd class="col-sm-10">@alert.IsUrgent</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">ExpiryDate</dt>
            <dd class="col-sm-10">@alert.ExpiryDate</dd>
        </dl>
        <EditForm method="post" Model="alert" OnValidSubmit="DeleteAlert" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(alert is null)">Delete</button> |
            <a href="/alerts">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private Alert? alert;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        alert = await context.Alert.FirstOrDefaultAsync(m => m.Id == Id);

        if (alert is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteAlert()
    {
        using var context = DbFactory.CreateDbContext();
        context.Alert.Remove(alert!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/alerts");
    }
}
