@page "/attendances"
@using Microsoft.EntityFrameworkCore
@using CR_GR__Helper.Models
@using CR_GR__Helper.Data
@implements IAsyncDisposable
@inject IDbContextFactory<CR_GR__Helper.Data.CR_GR__HelperContext> DbFactory

<PageTitle>Attendance</PageTitle>

<style>
    .attendance-container {
        max-width: 1400px;
        margin: 0 auto;
        padding: 40px 20px;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .page-header {
        margin-bottom: 40px;
        animation: fadeInDown 0.6s ease;
    }

    @@keyframes fadeInDown {
        from {
            opacity: 0;
            transform: translateY(-20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .page-header h1 {
        font-size: 2.5rem;
        color: #1e293b;
        margin-bottom: 10px;
        font-weight: 700;
        display: flex;
        align-items: center;
        gap: 15px;
    }

    .page-header p {
        color: #64748b;
        font-size: 1.1rem;
    }

    .header-actions {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
        gap: 20px;
        flex-wrap: wrap;
    }

    .search-box {
        flex: 1;
        max-width: 400px;
        position: relative;
    }

        .search-box input {
            width: 100%;
            padding: 14px 45px 14px 20px;
            border: 2px solid #e2e8f0;
            border-radius: 12px;
            font-size: 1rem;
        }

    .search-icon {
        position: absolute;
        right: 15px;
        top: 50%;
        transform: translateY(-50%);
        color: #64748b;
    }

    .btn-create {
        padding: 14px 30px;
        background: linear-gradient(135deg, #10b981, #059669);
        color: white;
        text-decoration: none;
        border-radius: 12px;
        font-weight: 600;
        box-shadow: 0 4px 15px rgba(16, 185, 129, 0.3);
    }

    .stats-row {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
        margin-bottom: 30px;
    }

    .stat-card {
        background: white;
        padding: 25px;
        border-radius: 16px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.06);
        border-left: 4px solid #10b981;
    }

    .stat-value {
        font-size: 2rem;
        font-weight: 700;
        color: #1e293b;
    }

    .stat-label {
        color: #64748b;
        font-size: 0.9rem;
    }

    .attendance-grid {
        display: grid;
        gap: 20px;
    }

    .attendance-card {
        background: white;
        border-radius: 16px;
        padding: 25px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.08);
        border-left: 4px solid #10b981;
    }

    .attendance-meta {
        display: flex;
        gap: 20px;
        flex-wrap: wrap;
        font-size: 0.95rem;
        color: #475569;
        margin-bottom: 15px;
    }

    .action-buttons {
        display: flex;
        gap: 10px;
    }

    .btn-action {
        padding: 8px 16px;
        text-decoration: none;
        border-radius: 8px;
        font-size: 0.9rem;
        font-weight: 500;
    }

    .btn-edit {
        background: #dbeafe;
        color: #1e40af;
    }

    .btn-details {
        background: #dcfce7;
        color: #166534;
    }

    .btn-delete {
        background: #fee2e2;
        color: #991b1b;
    }

    .empty-state {
        text-align: center;
        padding: 80px 20px;
        color: #64748b;
        background: white;
        border-radius: 16px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.08);
    }
</style>

<div class="attendance-container">

    <div class="page-header">
        <h1>📋 Attendance</h1>
        <p>Track and manage student attendance records</p>
    </div>

    <div class="stats-row">
        <div class="stat-card">
            <div class="stat-value">@context.Attendance.Count()</div>
            <div class="stat-label">Total Records</div>
        </div>
        <div class="stat-card">
            <div class="stat-value">@context.Attendance.Count(a => a.Status == "Present")</div>
            <div class="stat-label">Present</div>
        </div>
        <div class="stat-card">
            <div class="stat-value">@context.Attendance.Count(a => a.Status == "Absent")</div>
            <div class="stat-label">Absent</div>
        </div>
    </div>

    <div class="header-actions">
        <div class="search-box">
            <input type="text" placeholder="Search attendance..."
                   @bind="searchTerm" @bind:event="oninput" />
            <span class="search-icon">🔍</span>
        </div>

        <a href="attendances/create" class="btn-create">➕ Add Attendance</a>
    </div>

    <div class="attendance-grid">
        @if (FilteredAttendance.Any())
        {
            @foreach (var attendance in FilteredAttendance)
            {
                <div class="attendance-card">
                    <div class="attendance-meta">
                        <div>📅 <strong>@attendance.Date.ToString("MMM dd, yyyy")</strong></div>
                        <div>👨‍🎓 Student ID: @attendance.StudentId</div>
                        <div>📘 Subject ID: @attendance.SubjectId</div>
                        <div>✅ Status: <strong>@attendance.Status</strong></div>
                    </div>

                    @if (!string.IsNullOrWhiteSpace(attendance.Remarks))
                    {
                        <p>📝 @attendance.Remarks</p>
                    }

                    <div class="action-buttons">
                        <a href="@($"attendances/edit?id={attendance.Id}")" class="btn-action btn-edit">Edit</a>
                        <a href="@($"attendances/details?id={attendance.Id}")" class="btn-action btn-details">Details</a>
                        <a href="@($"attendances/delete?id={attendance.Id}")" class="btn-action btn-delete">Delete</a>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="empty-state">
                <div style="font-size:4rem">📭</div>
                <h3>No attendance records</h3>
                <p>Add a new attendance entry</p>
            </div>
        }
    </div>
</div>

@code {
    private CR_GR__HelperContext context = default!;
    private string searchTerm = "";

    private IEnumerable<Attendance> FilteredAttendance =>
        context.Attendance
        .Where(a =>
            string.IsNullOrWhiteSpace(searchTerm) ||
            a.Status.ToLower().Contains(searchTerm.ToLower()) ||
            a.Remarks.ToLower().Contains(searchTerm.ToLower())
        )
        .OrderByDescending(a => a.Date)
        .ToList();

    protected override void OnInitialized()
    {
        context = DbFactory.CreateDbContext();
    }

    public async ValueTask DisposeAsync() => await context.DisposeAsync();
}
