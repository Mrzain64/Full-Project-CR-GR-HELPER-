@page "/teachers"
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Components.QuickGrid
@using CR_GR__Helper.Models
@using CR_GR__Helper.Data
@implements IAsyncDisposable
@inject IDbContextFactory<CR_GR__Helper.Data.CR_GR__HelperContext> DbFactory

<PageTitle>Teachers</PageTitle>

<style>
    .teachers-container {
        max-width: 1400px;
        margin: 0 auto;
        padding: 40px 20px;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .page-header {
        margin-bottom: 40px;
        animation: fadeInDown 0.6s ease;
    }

    @@keyframes fadeInDown {
        from {
            opacity: 0;
            transform: translateY(-20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .page-header h1 {
        font-size: 2.5rem;
        color: #1e293b;
        margin-bottom: 10px;
        font-weight: 700;
        display: flex;
        align-items: center;
        gap: 15px;
    }

    .page-header p {
        color: #64748b;
        font-size: 1.1rem;
    }

    .header-actions {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
        gap: 20px;
        flex-wrap: wrap;
        animation: fadeInUp 0.6s ease 0.2s backwards;
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .filters-group {
        display: flex;
        gap: 15px;
        flex-wrap: wrap;
        flex: 1;
    }

    .search-box {
        flex: 1;
        min-width: 250px;
        position: relative;
    }

        .search-box input {
            width: 100%;
            padding: 14px 45px 14px 20px;
            border: 2px solid #e2e8f0;
            border-radius: 12px;
            font-size: 1rem;
            transition: all 0.3s ease;
            background: white;
        }

            .search-box input:focus {
                outline: none;
                border-color: #3b82f6;
                box-shadow: 0 0 0 4px rgba(59, 130, 246, 0.1);
            }

    .search-icon {
        position: absolute;
        right: 15px;
        top: 50%;
        transform: translateY(-50%);
        color: #64748b;
    }

    .filter-select {
        padding: 14px 20px;
        border: 2px solid #e2e8f0;
        border-radius: 12px;
        font-size: 1rem;
        background: white;
        cursor: pointer;
        transition: all 0.3s ease;
    }

        .filter-select:focus {
            outline: none;
            border-color: #3b82f6;
            box-shadow: 0 0 0 4px rgba(59, 130, 246, 0.1);
        }

    .btn-create {
        padding: 14px 30px;
        background: linear-gradient(135deg, #3b82f6, #2563eb);
        color: white;
        text-decoration: none;
        border-radius: 12px;
        font-weight: 600;
        font-size: 1rem;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(59, 130, 246, 0.3);
        display: inline-flex;
        align-items: center;
        gap: 8px;
        border: none;
        cursor: pointer;
    }

        .btn-create:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 25px rgba(59, 130, 246, 0.4);
        }

    .stats-row {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
        margin-bottom: 30px;
        animation: fadeInUp 0.6s ease 0.3s backwards;
    }

    .stat-card {
        background: white;
        padding: 25px;
        border-radius: 16px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.06);
        border-left: 4px solid #3b82f6;
        transition: all 0.3s ease;
    }

        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
        }

    .stat-value {
        font-size: 2rem;
        font-weight: 700;
        color: #1e293b;
        margin-bottom: 5px;
    }

    .stat-label {
        color: #64748b;
        font-size: 0.9rem;
    }

    .teachers-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(380px, 1fr));
        gap: 25px;
        animation: fadeInUp 0.6s ease 0.4s backwards;
    }

    .teacher-card {
        background: white;
        border-radius: 20px;
        padding: 30px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

        .teacher-card::before {
            content: '';
            position: absolute;
            top: 0;
            right: 0;
            width: 150px;
            height: 150px;
            background: linear-gradient(135deg, #dbeafe 0%, transparent 70%);
            border-radius: 0 0 0 100%;
        }

        .teacher-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 12px 40px rgba(59, 130, 246, 0.15);
        }

    .status-indicator {
        position: absolute;
        top: 20px;
        right: 20px;
        width: 12px;
        height: 12px;
        border-radius: 50%;
        z-index: 1;
        box-shadow: 0 0 0 3px white;
    }

    .status-active {
        background: #10b981;
        animation: pulse-active 2s ease-in-out infinite;
    }

    .status-inactive {
        background: #94a3b8;
    }

    @@keyframes pulse-active {
        0%, 100% {
            box-shadow: 0 0 0 3px white, 0 0 0 6px rgba(16, 185, 129, 0.4);
        }

        50% {
            box-shadow: 0 0 0 3px white, 0 0 0 10px rgba(16, 185, 129, 0);
        }
    }

    .profile-section {
        display: flex;
        align-items: center;
        gap: 20px;
        margin-bottom: 20px;
        position: relative;
        z-index: 1;
    }

    .profile-avatar {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        background: linear-gradient(135deg, #dbeafe, #bfdbfe);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2rem;
        border: 4px solid white;
        box-shadow: 0 4px 15px rgba(59, 130, 246, 0.2);
    }

    .profile-info {
        flex: 1;
    }

    .profile-name {
        font-size: 1.4rem;
        font-weight: 700;
        color: #1e293b;
        margin-bottom: 5px;
    }

    .profile-dept {
        font-size: 0.95rem;
        color: #3b82f6;
        font-weight: 600;
    }

    .contact-details {
        display: flex;
        flex-direction: column;
        gap: 12px;
        margin-bottom: 15px;
        position: relative;
        z-index: 1;
    }

    .contact-item {
        display: flex;
        align-items: center;
        gap: 12px;
        padding: 12px;
        background: #f8fafc;
        border-radius: 10px;
        transition: all 0.3s ease;
    }

        .contact-item:hover {
            background: #dbeafe;
        }

    .contact-icon {
        font-size: 1.2rem;
        width: 32px;
        height: 32px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: white;
        border-radius: 8px;
        color: #3b82f6;
    }

    .contact-text {
        flex: 1;
        font-size: 0.95rem;
        color: #334155;
    }

    .subjects-section {
        background: #f1f5f9;
        padding: 15px;
        border-radius: 10px;
        margin-bottom: 20px;
        position: relative;
        z-index: 1;
    }

    .subjects-label {
        font-size: 0.85rem;
        color: #64748b;
        margin-bottom: 8px;
        font-weight: 600;
    }

    .subjects-text {
        font-size: 0.95rem;
        color: #1e293b;
        line-height: 1.6;
    }

    .action-buttons {
        display: flex;
        gap: 10px;
        position: relative;
        z-index: 1;
    }

    .btn-action {
        flex: 1;
        padding: 10px;
        text-decoration: none;
        border-radius: 8px;
        font-size: 0.9rem;
        font-weight: 500;
        transition: all 0.3s ease;
        text-align: center;
    }

    .btn-edit {
        background: #dbeafe;
        color: #1e40af;
    }

        .btn-edit:hover {
            background: #3b82f6;
            color: white;
        }

    .btn-details {
        background: #e0e7ff;
        color: #4338ca;
    }

        .btn-details:hover {
            background: #6366f1;
            color: white;
        }

    .btn-delete {
        background: #fee2e2;
        color: #991b1b;
    }

        .btn-delete:hover {
            background: #dc2626;
            color: white;
        }

    .empty-state {
        text-align: center;
        padding: 80px 20px;
        color: #64748b;
        background: white;
        border-radius: 16px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    }

    .empty-state-icon {
        font-size: 4rem;
        margin-bottom: 20px;
        opacity: 0.5;
    }

    @@media (max-width: 768px) {
        .page-header h1 {
            font-size: 1.8rem;
        }

        .header-actions {
            flex-direction: column;
            align-items: stretch;
        }

        .filters-group {
            flex-direction: column;
        }

        .search-box {
            max-width: 100%;
        }

        .teachers-grid {
            grid-template-columns: 1fr;
        }
    }
</style>

<div class="teachers-container">
    <div class="page-header">
        <h1>
            <span>👨‍🏫</span>
            Teacher Management
        </h1>
        <p>Manage all your faculty members and instructors</p>
    </div>

    <div class="stats-row">
        <div class="stat-card">
            <div class="stat-value">@context.Teacher.Count()</div>
            <div class="stat-label">Total Teachers</div>
        </div>
        <div class="stat-card" style="border-left-color: #10b981;">
            <div class="stat-value">@context.Teacher.Count(t => t.IsActive)</div>
            <div class="stat-label">Active Teachers</div>
        </div>
        <div class="stat-card" style="border-left-color: #f59e0b;">
            <div class="stat-value">@context.Teacher.Select(t => t.Department).Distinct().Count()</div>
            <div class="stat-label">Departments</div>
        </div>
    </div>

    <div class="header-actions">
        <div class="filters-group">
            <div class="search-box">
                <input type="text" placeholder="Search teachers..."
                       @bind="searchTerm" @bind:event="oninput" />
                <span class="search-icon">🔍</span>
            </div>
            <select class="filter-select" @bind="statusFilter">
                <option value="">All Status</option>
                <option value="Active">Active</option>
                <option value="Inactive">Inactive</option>
            </select>
        </div>
        <a href="teachers/create" class="btn-create">
            <span>➕</span>
            Add Teacher
        </a>
    </div>

    <div class="teachers-grid">
        @if (FilteredTeachers.Any())
        {
            @foreach (var teacher in FilteredTeachers)
            {
                <div class="teacher-card">
                    <div class="@(teacher.IsActive ? "status-indicator status-active" : "status-indicator status-inactive")"></div>

                    <div class="profile-section">
                        <div class="profile-avatar">👨‍🏫</div>
                        <div class="profile-info">
                            <div class="profile-name">@teacher.Name</div>
                            <div class="profile-dept">@teacher.Department</div>
                        </div>
                    </div>

                    <div class="contact-details">
                        <div class="contact-item">
                            <div class="contact-icon">📧</div>
                            <div class="contact-text">@teacher.Email</div>
                        </div>
                        <div class="contact-item">
                            <div class="contact-icon">📱</div>
                            <div class="contact-text">@teacher.PhoneNo</div>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(teacher.Subjects))
                    {
                        <div class="subjects-section">
                            <div class="subjects-label">Teaching Subjects</div>
                            <div class="subjects-text">@teacher.Subjects</div>
                        </div>
                    }

                    <div class="action-buttons">
                        <a href="@($"teachers/edit?id={teacher.Id}")" class="btn-action btn-edit">Edit</a>
                        <a href="@($"teachers/details?id={teacher.Id}")" class="btn-action btn-details">Details</a>
                        <a href="@($"teachers/delete?id={teacher.Id}")" class="btn-action btn-delete">Delete</a>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="empty-state">
                <div class="empty-state-icon">📭</div>
                <h3>No teachers found</h3>
                <p>Try adjusting your filters or add a new teacher</p>
            </div>
        }
    </div>
</div>

@code {
    private CR_GR__HelperContext context = default!;
    private string searchTerm = "";
    private string statusFilter = "";

    private IEnumerable<Teacher> FilteredTeachers
    {
        get
        {
            var teachers = context.Teacher.ToList();

            if (!string.IsNullOrWhiteSpace(statusFilter))
            {
                if (statusFilter == "Active")
                    teachers = teachers.Where(t => t.IsActive).ToList();
                else
                    teachers = teachers.Where(t => !t.IsActive).ToList();
            }

            if (!string.IsNullOrWhiteSpace(searchTerm))
            {
                var search = searchTerm.ToLower();
                teachers = teachers.Where(t =>
                    t.Name.ToLower().Contains(search) ||
                    t.Email.ToLower().Contains(search) ||
                    t.Department.ToLower().Contains(search) ||
                    (t.Subjects != null && t.Subjects.ToLower().Contains(search))
                ).ToList();
            }

            return teachers;
        }
    }

    protected override void OnInitialized()
    {
        context = DbFactory.CreateDbContext();
    }

    public async ValueTask DisposeAsync() => await context.DisposeAsync();
}