@page "/classes/delete"
@using Microsoft.EntityFrameworkCore
@using CR_GR__Helper.Models
@inject IDbContextFactory<CR_GR__Helper.Data.CR_GR__HelperContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>Classes</h2>
    <hr />
    @if (classes is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">ClassName</dt>
            <dd class="col-sm-10">@classes.ClassName</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Section</dt>
            <dd class="col-sm-10">@classes.Section</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Program</dt>
            <dd class="col-sm-10">@classes.Program</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Semester</dt>
            <dd class="col-sm-10">@classes.Semester</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">CR</dt>
            <dd class="col-sm-10">@classes.CR</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">GR</dt>
            <dd class="col-sm-10">@classes.GR</dd>
        </dl>
        <EditForm method="post" Model="classes" OnValidSubmit="DeleteClasses" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(classes is null)">Delete</button> |
            <a href="/classes">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private Classes? classes;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        classes = await context.Classes.FirstOrDefaultAsync(m => m.Id == Id);

        if (classes is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteClasses()
    {
        using var context = DbFactory.CreateDbContext();
        context.Classes.Remove(classes!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/classes");
    }
}
