@page "/complains"
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Components.QuickGrid
@using CR_GR__Helper.Models
@using CR_GR__Helper.Data
@implements IAsyncDisposable
@inject IDbContextFactory<CR_GR__Helper.Data.CR_GR__HelperContext> DbFactory

<PageTitle>Complains</PageTitle>

<style>
    .complains-container {
        max-width: 1400px;
        margin: 0 auto;
        padding: 40px 20px;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .page-header {
        margin-bottom: 40px;
        animation: fadeInDown 0.6s ease;
    }

    @@keyframes fadeInDown {
        from {
            opacity: 0;
            transform: translateY(-20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .page-header h1 {
        font-size: 2.5rem;
        color: #1e293b;
        margin-bottom: 10px;
        font-weight: 700;
        display: flex;
        align-items: center;
        gap: 15px;
    }

    .page-header p {
        color: #64748b;
        font-size: 1.1rem;
    }

    .header-actions {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
        gap: 20px;
        flex-wrap: wrap;
        animation: fadeInUp 0.6s ease 0.2s backwards;
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .filters-group {
        display: flex;
        gap: 15px;
        flex-wrap: wrap;
        flex: 1;
    }

    .search-box {
        flex: 1;
        min-width: 250px;
        position: relative;
    }

        .search-box input {
            width: 100%;
            padding: 14px 45px 14px 20px;
            border: 2px solid #e2e8f0;
            border-radius: 12px;
            font-size: 1rem;
            transition: all 0.3s ease;
            background: white;
        }

            .search-box input:focus {
                outline: none;
                border-color: #ef4444;
                box-shadow: 0 0 0 4px rgba(239, 68, 68, 0.1);
            }

    .search-icon {
        position: absolute;
        right: 15px;
        top: 50%;
        transform: translateY(-50%);
        color: #64748b;
    }

    .filter-select {
        padding: 14px 20px;
        border: 2px solid #e2e8f0;
        border-radius: 12px;
        font-size: 1rem;
        background: white;
        cursor: pointer;
        transition: all 0.3s ease;
    }

        .filter-select:focus {
            outline: none;
            border-color: #ef4444;
            box-shadow: 0 0 0 4px rgba(239, 68, 68, 0.1);
        }

    .btn-create {
        padding: 14px 30px;
        background: linear-gradient(135deg, #ef4444, #dc2626);
        color: white;
        text-decoration: none;
        border-radius: 12px;
        font-weight: 600;
        font-size: 1rem;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(239, 68, 68, 0.3);
        display: inline-flex;
        align-items: center;
        gap: 8px;
        border: none;
        cursor: pointer;
    }

        .btn-create:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 25px rgba(239, 68, 68, 0.4);
        }

    .stats-row {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
        margin-bottom: 30px;
        animation: fadeInUp 0.6s ease 0.3s backwards;
    }

    .stat-card {
        background: white;
        padding: 25px;
        border-radius: 16px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.06);
        border-left: 4px solid #ef4444;
        transition: all 0.3s ease;
    }

        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
        }

    .stat-value {
        font-size: 2rem;
        font-weight: 700;
        color: #1e293b;
        margin-bottom: 5px;
    }

    .stat-label {
        color: #64748b;
        font-size: 0.9rem;
    }

    .complains-grid {
        display: grid;
        gap: 20px;
        animation: fadeInUp 0.6s ease 0.4s backwards;
    }

    .complain-card {
        background: white;
        border-radius: 16px;
        padding: 25px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        transition: all 0.3s ease;
        border-left: 5px solid #94a3b8;
        position: relative;
    }

        .complain-card.priority-high {
            border-left-color: #ef4444;
        }

        .complain-card.priority-medium {
            border-left-color: #f59e0b;
        }

        .complain-card.priority-low {
            border-left-color: #10b981;
        }

        .complain-card:hover {
            transform: translateX(5px);
            box-shadow: 0 6px 30px rgba(0, 0, 0, 0.12);
        }

    .complain-header {
        display: flex;
        justify-content: space-between;
        align-items: start;
        margin-bottom: 15px;
        gap: 15px;
    }

    .complain-title {
        font-size: 1.3rem;
        font-weight: 700;
        color: #1e293b;
        flex: 1;
    }

    .badges-group {
        display: flex;
        gap: 8px;
        flex-wrap: wrap;
    }

    .status-badge {
        padding: 6px 14px;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: 600;
    }

    .status-pending {
        background: #fef3c7;
        color: #92400e;
    }

    .status-inprogress {
        background: #dbeafe;
        color: #1e40af;
    }

    .status-resolved {
        background: #dcfce7;
        color: #166534;
    }

    .status-closed {
        background: #f3f4f6;
        color: #4b5563;
    }

    .priority-badge {
        padding: 6px 14px;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: 600;
    }

    .priority-high {
        background: #fee2e2;
        color: #991b1b;
    }

    .priority-medium {
        background: #fef3c7;
        color: #92400e;
    }

    .priority-low {
        background: #d1fae5;
        color: #065f46;
    }

    .category-badge {
        background: #f3e8ff;
        color: #6b21a8;
        padding: 6px 14px;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: 600;
    }

    .complain-description {
        color: #475569;
        line-height: 1.6;
        margin-bottom: 15px;
    }

    .complain-meta {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 15px;
        margin-bottom: 15px;
        padding: 15px;
        background: #f8fafc;
        border-radius: 10px;
    }

    .meta-item {
        display: flex;
        flex-direction: column;
        gap: 4px;
    }

    .meta-label {
        font-size: 0.8rem;
        color: #64748b;
    }

    .meta-value {
        font-size: 0.95rem;
        color: #1e293b;
        font-weight: 500;
    }

    .action-buttons {
        display: flex;
        gap: 10px;
        flex-wrap: wrap;
    }

    .btn-action {
        padding: 8px 16px;
        text-decoration: none;
        border-radius: 8px;
        font-size: 0.9rem;
        font-weight: 500;
        transition: all 0.3s ease;
    }

    .btn-edit {
        background: #dbeafe;
        color: #1e40af;
    }

        .btn-edit:hover {
            background: #3b82f6;
            color: white;
        }

    .btn-details {
        background: #f3e8ff;
        color: #6b21a8;
    }

        .btn-details:hover {
            background: #9333ea;
            color: white;
        }

    .btn-delete {
        background: #fee2e2;
        color: #991b1b;
    }

        .btn-delete:hover {
            background: #dc2626;
            color: white;
        }

    .empty-state {
        text-align: center;
        padding: 80px 20px;
        color: #64748b;
        background: white;
        border-radius: 16px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    }

    .empty-state-icon {
        font-size: 4rem;
        margin-bottom: 20px;
        opacity: 0.5;
    }

    @@media (max-width: 768px) {
        .page-header h1 {
            font-size: 1.8rem;
        }

        .header-actions {
            flex-direction: column;
            align-items: stretch;
        }

        .filters-group {
            flex-direction: column;
        }

        .search-box {
            max-width: 100%;
        }
    }
</style>

<div class="complains-container">
    <div class="page-header">
        <h1>
            <span>📢</span>
            Student Complains
        </h1>
        <p>Track and resolve student complaints efficiently</p>
    </div>

    <div class="stats-row">
        <div class="stat-card">
            <div class="stat-value">@context.Complain.Count()</div>
            <div class="stat-label">Total Complains</div>
        </div>
        <div class="stat-card" style="border-left-color: #f59e0b;">
            <div class="stat-value">@context.Complain.Count(c => c.Status == "Pending")</div>
            <div class="stat-label">Pending</div>
        </div>
        <div class="stat-card" style="border-left-color: #3b82f6;">
            <div class="stat-value">@context.Complain.Count(c => c.Status == "InProgress")</div>
            <div class="stat-label">In Progress</div>
        </div>
        <div class="stat-card" style="border-left-color: #10b981;">
            <div class="stat-value">@context.Complain.Count(c => c.Status == "Resolved")</div>
            <div class="stat-label">Resolved</div>
        </div>
    </div>

    <div class="header-actions">
        <div class="filters-group">
            <div class="search-box">
                <input type="text" placeholder="Search complains..."
                       @bind="searchTerm" @bind:event="oninput" />
                <span class="search-icon">🔍</span>
            </div>
            <select class="filter-select" @bind="statusFilter">
                <option value="">All Status</option>
                <option value="Pending">Pending</option>
                <option value="InProgress">In Progress</option>
                <option value="Resolved">Resolved</option>
                <option value="Closed">Closed</option>
            </select>
            <select class="filter-select" @bind="priorityFilter">
                <option value="">All Priority</option>
                <option value="High">High</option>
                <option value="Medium">Medium</option>
                <option value="Low">Low</option>
            </select>
        </div>
        <a href="complains/create" class="btn-create">
            <span>➕</span>
            New Complain
        </a>
    </div>

    <div class="complains-grid">
        @if (FilteredComplains.Any())
        {
            @foreach (var complain in FilteredComplains)
            {
                <div class="complain-card @($"priority-{complain.Priority?.ToLower()}")">
                    <div class="complain-header">
                        <div class="complain-title">@complain.Title</div>
                        <div class="badges-group">
                            <span class="@GetStatusClass(complain.Status)">@complain.Status</span>
                            <span class="@GetPriorityClass(complain.Priority)">@complain.Priority</span>
                            <span class="category-badge">@complain.Category</span>
                        </div>
                    </div>

                    <div class="complain-description">@complain.Description</div>

                    <div class="complain-meta">
                        <div class="meta-item">
                            <div class="meta-label">Name</div>
                            <div class="meta-value">@complain.ComplainantName</div>
                        </div>
                        <div class="meta-item">
                            <div class="meta-label">Email</div>
                            <div class="meta-value">@complain.ComplainantEmail</div>
                        </div>
                        <div class="meta-item">
                            <div class="meta-label">Phone</div>
                            <div class="meta-value">@complain.ComplainantPhone</div>
                        </div>
                        <div class="meta-item">
                            <div class="meta-label">Submitted</div>
                            <div class="meta-value">@complain.SubmittedDate.ToString("MMM dd, yyyy")</div>
                        </div>
                        @if (complain.ResolvedDate.HasValue)
                        {
                            <div class="meta-item">
                                <div class="meta-label">Resolved</div>
                                <div class="meta-value">@complain.ResolvedDate.Value.ToString("MMM dd, yyyy")</div>
                            </div>
                        }
                    </div>

                    <div class="action-buttons">
                        <a href="@($"complains/edit?id={complain.Id}")" class="btn-action btn-edit">Edit</a>
                        <a href="@($"complains/details?id={complain.Id}")" class="btn-action btn-details">Details</a>
                        <a href="@($"complains/delete?id={complain.Id}")" class="btn-action btn-delete">Delete</a>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="empty-state">
                <div class="empty-state-icon">📭</div>
                <h3>No complains found</h3>
                <p>Try adjusting your filters or create a new complain</p>
            </div>
        }
    </div>
</div>

@code {
    private CR_GR__HelperContext context = default!;
    private string searchTerm = "";
    private string statusFilter = "";
    private string priorityFilter = "";

    private IEnumerable<Complain> FilteredComplains
    {
        get
        {
            var complains = context.Complain.OrderByDescending(c => c.SubmittedDate).ToList();

            if (!string.IsNullOrWhiteSpace(statusFilter))
                complains = complains.Where(c => c.Status == statusFilter).ToList();

            if (!string.IsNullOrWhiteSpace(priorityFilter))
                complains = complains.Where(c => c.Priority == priorityFilter).ToList();

            if (!string.IsNullOrWhiteSpace(searchTerm))
            {
                var search = searchTerm.ToLower();
                complains = complains.Where(c =>
                    c.Title.ToLower().Contains(search) ||
                    c.Description.ToLower().Contains(search) ||
                    c.ComplainantName.ToLower().Contains(search) ||
                    c.Category.ToLower().Contains(search)
                ).ToList();
            }

            return complains;
        }
    }

    protected override void OnInitialized()
    {
        context = DbFactory.CreateDbContext();
    }

    private string GetStatusClass(string status)
    {
        return status?.ToLower() switch
        {
            "pending" => "status-badge status-pending",
            "inprogress" => "status-badge status-inprogress",
            "resolved" => "status-badge status-resolved",
            "closed" => "status-badge status-closed",
            _ => "status-badge"
        };
    }

    private string GetPriorityClass(string priority)
    {
        return priority?.ToLower() switch
        {
            "high" => "priority-badge priority-high",
            "medium" => "priority-badge priority-medium",
            "low" => "priority-badge priority-low",
            _ => "priority-badge"
        };
    }

    public async ValueTask DisposeAsync() => await context.DisposeAsync();
}