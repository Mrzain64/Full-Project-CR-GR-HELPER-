@page "/complains/delete"
@using Microsoft.EntityFrameworkCore
@using CR_GR__Helper.Models
@inject IDbContextFactory<CR_GR__Helper.Data.CR_GR__HelperContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>Complain</h2>
    <hr />
    @if (complain is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Title</dt>
            <dd class="col-sm-10">@complain.Title</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Description</dt>
            <dd class="col-sm-10">@complain.Description</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">ComplainantName</dt>
            <dd class="col-sm-10">@complain.ComplainantName</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">ComplainantEmail</dt>
            <dd class="col-sm-10">@complain.ComplainantEmail</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">ComplainantPhone</dt>
            <dd class="col-sm-10">@complain.ComplainantPhone</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">SubmittedDate</dt>
            <dd class="col-sm-10">@complain.SubmittedDate</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Status</dt>
            <dd class="col-sm-10">@complain.Status</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Category</dt>
            <dd class="col-sm-10">@complain.Category</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">ResolvedDate</dt>
            <dd class="col-sm-10">@complain.ResolvedDate</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Priority</dt>
            <dd class="col-sm-10">@complain.Priority</dd>
        </dl>
        <EditForm method="post" Model="complain" OnValidSubmit="DeleteComplain" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(complain is null)">Delete</button> |
            <a href="/complains">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private Complain? complain;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        complain = await context.Complain.FirstOrDefaultAsync(m => m.Id == Id);

        if (complain is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteComplain()
    {
        using var context = DbFactory.CreateDbContext();
        context.Complain.Remove(complain!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/complains");
    }
}
