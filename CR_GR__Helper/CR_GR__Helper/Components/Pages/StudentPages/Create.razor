@page "/students/create"
@using Microsoft.EntityFrameworkCore
@using CR_GR__Helper.Models
@inject IDbContextFactory<CR_GR__Helper.Data.CR_GR__HelperContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Create Student</PageTitle>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">
                        <i class="bi bi-person-plus-fill me-2"></i>Add New Student
                    </h3>
                </div>
                <div class="card-body p-4">
                    <EditForm method="post" Model="Student" OnValidSubmit="AddStudent" FormName="create" Enhance>
                        <DataAnnotationsValidator />

                        @if (!string.IsNullOrEmpty(ErrorMessage))
                        {
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <i class="bi bi-exclamation-triangle-fill me-2"></i>@ErrorMessage
                                <button type="button" class="btn-close" @onclick="() => ErrorMessage = string.Empty"></button>
                            </div>
                        }

                        <ValidationSummary class="alert alert-danger" role="alert" />

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="name" class="form-label fw-bold">
                                    <span class="text-danger me-1">*</span>
                                    <i class="bi bi-person me-1"></i>Student Name
                                </label>
                                <InputText id="name" @bind-Value="Student.Name"
                                           class="form-control form-control-lg"
                                           placeholder="Enter full name"
                                           aria-required="true" />
                                <ValidationMessage For="() => Student.Name" class="text-danger small mt-1" />
                            </div>

                            <div class="col-md-6 mb-3">
                                <label for="registrationno" class="form-label fw-bold">
                                    <span class="text-danger me-1">*</span>
                                    <i class="bi bi-card-text me-1"></i>Registration No
                                </label>
                                <InputText id="registrationno" @bind-Value="Student.RegistrationNo"
                                           class="form-control form-control-lg"
                                           placeholder="e.g., 2023-CS-001"
                                           aria-required="true" />
                                <ValidationMessage For="() => Student.RegistrationNo" class="text-danger small mt-1" />
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="email" class="form-label fw-bold">
                                    <span class="text-danger me-1">*</span>
                                    <i class="bi bi-envelope me-1"></i>Email Address
                                </label>
                                <InputText id="email" @bind-Value="Student.Email"
                                           type="email"
                                           class="form-control form-control-lg"
                                           placeholder="student@example.com"
                                           aria-required="true" />
                                <ValidationMessage For="() => Student.Email" class="text-danger small mt-1" />
                            </div>

                            <div class="col-md-6 mb-3">
                                <label for="phoneno" class="form-label fw-bold">
                                    <i class="bi bi-telephone me-1"></i>Phone Number
                                </label>
                                <InputText id="phoneno" @bind-Value="Student.PhoneNo"
                                           class="form-control form-control-lg"
                                           placeholder="+92 300 1234567" />
                                <ValidationMessage For="() => Student.PhoneNo" class="text-danger small mt-1" />
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="cgpa" class="form-label fw-bold">
                                    <i class="bi bi-graph-up me-1"></i>CGPA
                                </label>
                                <InputNumber id="cgpa" @bind-Value="Student.CGPA"
                                             class="form-control form-control-lg"
                                             step="0.01"
                                             placeholder="e.g., 3.50" />
                                <ValidationMessage For="() => Student.CGPA" class="text-danger small mt-1" />
                                <small class="text-muted">Scale: 0.00 - 4.00</small>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label for="class" class="form-label fw-bold">
                                    <i class="bi bi-book me-1"></i>Class/Section
                                </label>
                                <InputText id="class" @bind-Value="Student.Class"
                                           class="form-control form-control-lg"
                                           placeholder="e.g., BSCS-7A" />
                                <ValidationMessage For="() => Student.Class" class="text-danger small mt-1" />
                            </div>
                        </div>

                        <hr class="my-4">

                        <div class="d-flex gap-2 justify-content-end">
                            <a href="/students" class="btn btn-outline-secondary btn-lg px-4">
                                <i class="bi bi-arrow-left me-2"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-primary btn-lg px-4" disabled="@IsSubmitting">
                                @if (IsSubmitting)
                                {
                                    <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                                    <span>Creating...</span>
                                }
                                else
                                {
                                    <i class="bi bi-check-circle me-2"></i>
                                    <span>Create Student</span>
                                }
                            </button>
                        </div>
                    </EditForm>
                </div>
            </div>

            <div class="mt-3 text-muted small text-center">
                <i class="bi bi-info-circle me-1"></i>
                Fields marked with <span class="text-danger">*</span> are required
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border: none;
        border-radius: 12px;
    }

    .card-header {
        border-radius: 12px 12px 0 0 !important;
        padding: 1.5rem;
    }

    .form-control-lg {
        border-radius: 8px;
        border: 2px solid #e0e0e0;
        transition: all 0.3s ease;
    }

        .form-control-lg:focus {
            border-color: #0d6efd;
            box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.15);
        }

    .btn-lg {
        border-radius: 8px;
        padding: 0.75rem 1.5rem;
        font-weight: 500;
        transition: all 0.3s ease;
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(13, 110, 253, 0.3);
    }

    .btn-outline-secondary:hover {
        transform: translateY(-2px);
    }
</style>

@code {
    [SupplyParameterFromForm]
    private Student Student { get; set; } = new();

    private bool IsSubmitting { get; set; } = false;
    private string ErrorMessage { get; set; } = string.Empty;

    private async Task AddStudent()
    {
        try
        {
            IsSubmitting = true;
            ErrorMessage = string.Empty;

            using var context = DbFactory.CreateDbContext();
            context.Student.Add(Student);
            await context.SaveChangesAsync();

            NavigationManager.NavigateTo("/students");
        }
        catch (Exception ex)
        {
            IsSubmitting = false;
            ErrorMessage = "An error occurred while creating the student. Please try again.";
            // Log the exception (ex) here if you have a logging service
        }
    }
}