@page "/students"
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Components.QuickGrid
@using CR_GR__Helper.Models
@using CR_GR__Helper.Data
@implements IAsyncDisposable
@inject IDbContextFactory<CR_GR__Helper.Data.CR_GR__HelperContext> DbFactory

<PageTitle>Students</PageTitle>

<style>
    .students-container {
        max-width: 1400px;
        margin: 0 auto;
        padding: 40px 20px;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .page-header {
        margin-bottom: 40px;
        animation: fadeInDown 0.6s ease;
    }

    @@keyframes fadeInDown {
        from {
            opacity: 0;
            transform: translateY(-20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .page-header h1 {
        font-size: 2.5rem;
        color: #1e293b;
        margin-bottom: 10px;
        font-weight: 700;
        display: flex;
        align-items: center;
        gap: 15px;
    }

    .page-header p {
        color: #64748b;
        font-size: 1.1rem;
    }

    .header-actions {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
        gap: 20px;
        flex-wrap: wrap;
        animation: fadeInUp 0.6s ease 0.2s backwards;
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .search-box {
        flex: 1;
        max-width: 400px;
        position: relative;
    }

        .search-box input {
            width: 100%;
            padding: 14px 45px 14px 20px;
            border: 2px solid #e2e8f0;
            border-radius: 12px;
            font-size: 1rem;
            transition: all 0.3s ease;
            background: white;
        }

            .search-box input:focus {
                outline: none;
                border-color: #6366f1;
                box-shadow: 0 0 0 4px rgba(99, 102, 241, 0.1);
            }

    .search-icon {
        position: absolute;
        right: 15px;
        top: 50%;
        transform: translateY(-50%);
        color: #64748b;
        font-size: 1.2rem;
    }

    .btn-create {
        padding: 14px 30px;
        background: linear-gradient(135deg, #6366f1, #8b5cf6);
        color: white;
        text-decoration: none;
        border-radius: 12px;
        font-weight: 600;
        font-size: 1rem;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(99, 102, 241, 0.3);
        display: inline-flex;
        align-items: center;
        gap: 8px;
        border: none;
        cursor: pointer;
    }

        .btn-create:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 25px rgba(99, 102, 241, 0.4);
        }

    .table-card {
        background: white;
        border-radius: 16px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        overflow: hidden;
        animation: fadeInUp 0.6s ease 0.4s backwards;
    }

    .table-wrapper {
        overflow-x: auto;
    }

    .students-table {
        width: 100%;
        border-collapse: collapse;
    }

        .students-table thead {
            background: linear-gradient(135deg, #f8fafc, #f1f5f9);
            position: sticky;
            top: 0;
            z-index: 10;
        }

        .students-table th {
            padding: 18px 20px;
            text-align: left;
            font-weight: 600;
            color: #475569;
            font-size: 0.9rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            border-bottom: 2px solid #e2e8f0;
        }

        .students-table tbody tr {
            transition: all 0.3s ease;
            border-bottom: 1px solid #f1f5f9;
        }

            .students-table tbody tr:hover {
                background: #f8fafc;
                transform: scale(1.01);
                box-shadow: 0 4px 12px rgba(99, 102, 241, 0.08);
            }

        .students-table td {
            padding: 18px 20px;
            color: #334155;
            font-size: 0.95rem;
        }

    .student-name {
        font-weight: 600;
        color: #1e293b;
    }

    .cgpa-badge {
        display: inline-block;
        padding: 6px 14px;
        border-radius: 20px;
        font-weight: 600;
        font-size: 0.85rem;
    }

    .cgpa-excellent {
        background: #dcfce7;
        color: #166534;
    }

    .cgpa-good {
        background: #dbeafe;
        color: #1e40af;
    }

    .cgpa-average {
        background: #fef3c7;
        color: #92400e;
    }

    .cgpa-low {
        background: #fee2e2;
        color: #991b1b;
    }

    .action-buttons {
        display: flex;
        gap: 10px;
        flex-wrap: wrap;
    }

    .btn-action {
        padding: 8px 16px;
        text-decoration: none;
        border-radius: 8px;
        font-size: 0.9rem;
        font-weight: 500;
        transition: all 0.3s ease;
        display: inline-block;
    }

    .btn-edit {
        background: #dbeafe;
        color: #1e40af;
    }

        .btn-edit:hover {
            background: #3b82f6;
            color: white;
        }

    .btn-details {
        background: #f3e8ff;
        color: #6b21a8;
    }

        .btn-details:hover {
            background: #9333ea;
            color: white;
        }

    .btn-delete {
        background: #fee2e2;
        color: #991b1b;
    }

        .btn-delete:hover {
            background: #dc2626;
            color: white;
        }

    .stats-row {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
        margin-bottom: 30px;
        animation: fadeInUp 0.6s ease 0.3s backwards;
    }

    .stat-card {
        background: white;
        padding: 25px;
        border-radius: 16px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.06);
        border-left: 4px solid #6366f1;
        transition: all 0.3s ease;
    }

        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
        }

    .stat-value {
        font-size: 2rem;
        font-weight: 700;
        color: #1e293b;
        margin-bottom: 5px;
    }

    .stat-label {
        color: #64748b;
        font-size: 0.9rem;
    }

    .empty-state {
        text-align: center;
        padding: 80px 20px;
        color: #64748b;
    }

    .empty-state-icon {
        font-size: 4rem;
        margin-bottom: 20px;
        opacity: 0.5;
    }

    @@media (max-width: 768px) {
        .page-header h1 {
            font-size: 1.8rem;
        }

        .header-actions {
            flex-direction: column;
            align-items: stretch;
        }

        .search-box {
            max-width: 100%;
        }
    }
</style>

<div class="students-container">
    <div class="page-header">
        <h1>
            <span>👨‍🎓</span>
            Student Management
        </h1>
        <p>Manage all your students in one place</p>
    </div>

    <div class="stats-row">
        <div class="stat-card">
            <div class="stat-value">@context.Student.Count()</div>
            <div class="stat-label">Total Students</div>
        </div>
        <div class="stat-card" style="border-left-color: #10b981;">
            <div class="stat-value">@context.Student.Count(s => s.CGPA >= 3.5m)</div>
            <div class="stat-label">High Achievers</div>
        </div>
        <div class="stat-card" style="border-left-color: #f59e0b;">
            <div class="stat-value">@context.Student.Select(s => s.Class).Distinct().Count()</div>
            <div class="stat-label">Total Classes</div>
        </div>
    </div>

    <div class="header-actions">
        <div class="search-box">
            <input type="text" placeholder="Search students by name, registration no..."
                   @bind="searchTerm" @bind:event="oninput" />
            <span class="search-icon">🔍</span>
        </div>
        <a href="students/create" class="btn-create">
            <span>➕</span>
            Add New Student
        </a>
    </div>

    <div class="table-card">
        <div class="table-wrapper">
            @if (FilteredStudents.Any())
            {
                <table class="students-table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Registration No</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>CGPA</th>
                            <th>Class</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var student in FilteredStudents)
                        {
                            <tr>
                                <td class="student-name">@student.Name</td>
                                <td>@student.RegistrationNo</td>
                                <td>@student.Email</td>
                                <td>@student.PhoneNo</td>
                                <td>
                                    <span class="@GetCGPAClass(student.CGPA)">
                                        @student.CGPA.ToString("F2")
                                    </span>
                                </td>
                                <td>@student.Class</td>
                                <td>
                                    <div class="action-buttons">
                                        <a href="@($"students/edit?id={student.Id}")" class="btn-action btn-edit">Edit</a>
                                        <a href="@($"students/details?id={student.Id}")" class="btn-action btn-details">Details</a>
                                        <a href="@($"students/delete?id={student.Id}")" class="btn-action btn-delete">Delete</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="empty-state">
                    <div class="empty-state-icon">📭</div>
                    <h3>No students found</h3>
                    <p>Try adjusting your search or add a new student</p>
                </div>
            }
        </div>
    </div>
</div>

@code {
    private CR_GR__HelperContext context = default!;
    private string searchTerm = "";

    private IEnumerable<Student> FilteredStudents
    {
        get
        {
            if (string.IsNullOrWhiteSpace(searchTerm))
                return context.Student.ToList();

            var search = searchTerm.ToLower();
            return context.Student
                .Where(s => s.Name.ToLower().Contains(search) ||
                           s.RegistrationNo.ToLower().Contains(search) ||
                           s.Email.ToLower().Contains(search))
                .ToList();
        }
    }

    protected override void OnInitialized()
    {
        context = DbFactory.CreateDbContext();
    }

    private string GetCGPAClass(decimal cgpa)
    {
        if (cgpa >= 3.5m) return "cgpa-badge cgpa-excellent";
        if (cgpa >= 3.0m) return "cgpa-badge cgpa-good";
        if (cgpa >= 2.5m) return "cgpa-badge cgpa-average";
        return "cgpa-badge cgpa-low";
    }

    public async ValueTask DisposeAsync() => await context.DisposeAsync();
}